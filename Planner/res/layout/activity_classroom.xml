<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98dbce"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Enter a new location:" />
    
    <fragment
        android:id="@+id/cr_entryFragment"
       	android:name="edu.calstatela.cs594.mapcampusmap.EntryView"
       	android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#00a9a9a9" >
    </FrameLayout>
    
        <TextView
            android:id="@+id/listTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Location list:" />

    <fragment
        android:id="@+id/cr_listFragment"
        android:name="edu.calstatela.cs594.mapcampusmap.MyListFragment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
